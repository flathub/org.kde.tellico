                    }
                }
            ]
        },
        {
            "name": "taglib",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_SHARED_LIBS=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://taglib.github.io/releases/taglib-2.0.tar.gz",
                    "sha256": "e36ea877a6370810b97d84cf8f72b1e4ed205149ab3ac8232d44c850f38a2859",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1982,
                        "stable-only": true,
                        "url-template": "https://taglib.github.io/releases/taglib-$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "yaz",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ftp.indexdata.com/pub/yaz/yaz-5.34.0.tar.gz",
                    "sha256": "bcbea894599a13342910003401c17576f0fb910092aecb51cb54065d0cd2d613",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 5287,
                        "stable-only": true,
                        "url-template": "https://ftp.indexdata.com/pub/yaz/yaz-$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "tellico",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTING=FALSE",
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://tellico-project.org/files/tellico-3.5.4.tar.xz",
