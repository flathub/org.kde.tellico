{
    "id": "org.kde.tellico",
    "command": "tellico",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-23.08",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "5.15-23.08",
    "sdk": "org.kde.Sdk",
    "rename-icon": "tellico",
